<!DOCTYPE html>
<html lang="en">
  <head>
    <link href="/static/mermaid.min.css" rel="stylesheet"/>
    <style>
     .container {
         display: grid;
         grid-template-columns: auto auto;
         padding: 1px 1px 20px 1px;
         width: 400px;
     }
     .container div {         
         background-color: #f1f1f1;
         border: 1px solid black;
         padding: 10px;
         font-size: 30px;
         text-align: left;
     }
    </style>
  </head>
  <body>
    <h2>{{.ID}}</h2>
    <h3>{{.Name}}</h3>
    <div class="container">
      <div>Type</div>
      <div>{{.Type}}</div>
      <div>Constellation</div>
      <div>{{.Constellation}}</div>
      <div>RA</div>
      <div>{{.RA}}</div>
      <div>Dec</div>
      <div>{{.Dec}}</div>
      <div>Magnitude</div>
      <div>{{.Magnitude}}</div>
      <div>Hour Angle</div>
      <div>{{.HourAngle}}</div>
      <div>Visible</div>
      <div>{{.Visible}}</div>
    </div>
    <button {{if .Visible}}onclick="goto()"{{else}}onclick="alert('object not visible')"{{end}}>Goto</button>
  </body>
  <script>
   function goto() {
       fetch('/objects/{{.ID}}', {method: 'POST',}).then(
           response => {
               if (!response.ok) {
                   throw new Error('Network response was not ok');
               }
       });
   }
  </script>
</html>

